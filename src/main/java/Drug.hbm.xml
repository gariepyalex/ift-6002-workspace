<?xml version="1.0"?>
            <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class
    name="ca.ulaval.ift6002.m2.infrastructure.persistence.hibernate.DrugPersistentClass"
    table="drugs">
    <id name="id" type="int" column="id">
      <generator class="native" />
    </id>


    <property name="din" column="din" type="int" />
    <property name="name" column="name" type="string" />
    <property name="descriptor" column="descriptor" type="string" />
  </class>

</hibernate-mapping>
